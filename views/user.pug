html
  head
    title= 'LIFX Visualiser'
    link(rel='stylesheet', href='/style.css')
    link(rel="icon", href="/images/spotify-logo.png")
  body
    div(id='container')
      h1= 'Hey ' + user.display_name.split(" ")[0]

      div(class='media')
        - if (user.images.length>0) {
          img(src=user.images[0].url)
        -}

      h3= 'Your Spotify account is now connected!'
      h4= '...but we couldn\'t find any LIFX devices'

      div
        br
        a(href='/user' class="btn btn-primary")='Retry'
