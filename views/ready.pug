html
  head
    title= 'LIFX Visualiser'
    link(rel='stylesheet', href='/style.css')
    link(rel="icon", href="/images/spotify-logo.png")
  // party
  body(class='')
    div(id='container')
      h1= 'You\'re all set!'

      div(class='media')
        - if (user.images.length>0) {
          img(src=user.images[0].url)
        -}

      h3= 'Enjoy the show'
      div
        a(href='/go/colour/red' id="red" class="btn btn-primary")='Red'
        a(href='/go/colour/tamisepose' id="tamisepose" class="btn btn-primary")='Tamise'
        a(href='/go/colour/yellow' id="yellow" class="btn btn-primary")='Yellow'
        a(href='/go/colour/green' id="green" class="btn btn-primary")='Green'
        a(href='/go/colour/cyan' id="cyan" class="btn btn-primary")='Cyan'
        a(href='/go/colour/purple' id="purple" class="btn btn-primary")='Purple'
        a(href='/go/colour/blue' id="blue" class="btn btn-primary")='Blue'

      div
        a(href='/go/mode/chill' class="btn btn-primary")='Chill'
        a(href='/go/mode/inter' class="btn btn-primary")='Inter'
        a(href='/go/mode/edm' class="btn btn-primary")='EDM'